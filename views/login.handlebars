<div class="row d-flex justify-content-center">
<div class="border m-5" style="width: 23rem;">
  <h2 class="m-5">Login</h2>

  <form class="form login-form ">
    <div class="form-group m-3">
      <label for="username-login">username:</label>
      <input class="form-input" type="text" id="username-login" />
    </div>
    <div class="form-group m-3">
      <label for="password-login">password:</label>
      <input class="form-input" type="password" id="password-login" />
    </div>
    <div class="form-group m-3">
      <button class="btn btn-primary" type="submit">login</button>
    </div>
  </form>
</div>
<div class="border m-5" style="width: 23rem;">
  <h2 class="m-5">Create New User</h2>

  <form class="form create-user-form">
    <div class="form-group m-3">
      <label for="username-create">username:</label>
      <input class="form-input" type="text" id="username-create" />
    </div>
    <div class="form-group m-3">
      <label for="password-create">password:</label>
      <input class="form-input" type="password" id="password-create" />
    </div>
    <div class="form-group m-3">
      <button class="btn btn-primary" type="submit">submit</button>
    </div>
  </form>
</div>
</div>
<script src="/js/login.js"></script>