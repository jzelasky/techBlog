<div class="d-flex justify-content-center mt-4">
  <h2>Edit Post</h2>
</div>
<div class="d-flex justify-content-center">
<form class="m-3" style="width: 35rem;">
  <div class="form-group m-3">
    <label for="title"><h3>Title:</h3></label>
    <textarea class="form-control" id="title" rows="1">{{post.dataValues.title}}</textarea>
  </div>
  <div class="form-group m-3">
    <label for="content"><h3>Body:</h3></label>
    <textarea class="form-control" id="content" rows="5">{{post.dataValues.content}}</textarea>
  </div>
</form>
</div>
<div class="d-flex justify-content-center">
<button type="button" class="btn btn-secondary" id="submit">Submit</button>
</div>
<script src="/js/editPost.js"></script>