<div class="d-flex justify-content-center">
    <h2 class="m-3">{{user.dataValues.username}}'s dashboard</h2>
</div>
<div class="d-flex justify-content-center">
    <a href="dashboard/new-post">
        <button type="button" class="btn btn-secondary">Create new post</button>
    </a>
</div>
{{#each posts as |post|}}
<div class="d-flex justify-content-center">
<div class="card m-5" style="width: 35rem;">
    <div class="card-body">
        <h5 class="card-title">{{post.dataValues.title}}</h5>
        <p class="card-text">{{post.dataValues.content}}</p>
        <p class="card-text text-muted small">{{format_date post.dataValues.updatedAt}}</p>
        <a href="dashboard/edit-post/{{post.dataValues.id}}" id="edit" class="m-1">Edit</a>
        <a id="delete" class="m-1 link {{post.dataValues.id}}">Delete</a>
    </div>
</div>
</div>
{{/each}}

<script src="/js/deletePost.js"></script>